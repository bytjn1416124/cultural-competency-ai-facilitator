# OpenAI API Configuration
NEXT_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here

# Voice Configuration
NEXT_PUBLIC_DEFAULT_VOICE=alloy

# WebSocket Configuration
NEXT_PUBLIC_WEBSOCKET_URL=wss://api.openai.com/v1/audio/realtime

# VAD (Voice Activity Detection) Configuration
NEXT_PUBLIC_VAD_THRESHOLD=0.2
NEXT_PUBLIC_VAD_SILENCE_DURATION=500

# Session Configuration
NEXT_PUBLIC_MAX_SESSION_DURATION=240 # in minutes
NEXT_PUBLIC_DEFAULT_BREAK_DURATION=15 # in minutes

# Debug Mode
NEXT_PUBLIC_DEBUG_MODE=false
